{
  "info": {
    "name": "Newman Setup Test",
    "description": "Basic test to verify Newman is working correctly",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "noauth"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "console.log('üß™ Newman Setup Test Starting...');"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Test 1: Basic HTTP Request (Google)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('‚úÖ HTTP request works', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('‚úÖ Response time acceptable', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(5000);",
              "});",
              "",
              "console.log('üìä Response time:', pm.response.responseTime + 'ms');"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://www.google.com",
          "protocol": "https",
          "host": ["www", "google", "com"]
        },
        "description": "Basic HTTP request to verify Newman can make external calls"
      }
    },
    {
      "name": "Test 2: Environment Variables",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('‚úÖ Environment variables loaded', function () {",
              "    const baseUrl = pm.environment.get('base_url');",
              "    const apiVersion = pm.environment.get('api_version');",
              "    ",
              "    pm.expect(baseUrl).to.not.be.undefined;",
              "    pm.expect(apiVersion).to.not.be.undefined;",
              "    ",
              "    console.log('üåç Base URL:', baseUrl);",
              "    console.log('üì¶ API Version:', apiVersion);",
              "});",
              "",
              "pm.test('‚úÖ Collection variables work', function () {",
              "    pm.collectionVariables.set('test_timestamp', Date.now());",
              "    const timestamp = pm.collectionVariables.get('test_timestamp');",
              "    pm.expect(timestamp).to.be.a('number');",
              "    console.log('‚è∞ Test timestamp:', timestamp);",
              "});",
              "",
              "pm.test('‚úÖ Newman is working correctly', function () {",
              "    console.log('üéâ Newman setup test PASSED!');",
              "    pm.expect(true).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://httpbin.org/json",
          "protocol": "https",
          "host": ["httpbin", "org"],
          "path": ["json"]
        },
        "description": "Test environment variables and collection functionality"
      }
    }
  ]
}